{
  "name": "onecademy",
  "description": "A Collaborative Knoweledge Synthesis and Visualization Platform for Students and Researchers",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --watch --runInBand",
    "test:ci": "firebase emulators:exec --project test --only auth,functions,firestore 'npx jest --ci --runInBand'"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/storage": "^5.14.2",
    "body-parser": "^1.19.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "city-timezones": "^1.2.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "fast-csv": "^4.3.6",
    "firebase-admin": "^10.3.0",
    "firebase-functions": "^3.23.0",
    "firebase-tools": "^7.1.1",
    "googleapis": "^87.0.0",
    "http": "^0.0.1-security",
    "jest": "^29.3.1",
    "moment-timezone": "^0.5.34",
    "nodemailer": "^6.6.5",
    "number-to-words": "^1.2.4",
    "typesense": "^1.3.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0"
  },
  "private": true,
